<div class="form-container">
  <h1>Edit my profile</h1>
  <p><%= link_to "Back to Profile", user_path(current_user) %></p>

  <div class="form-inputs">
    <%= simple_form_for @user do |f| %>
    <%= f.input :first_name,
                placeholder: "First Name",
                label: false,
                autofocus: true %>
    <%= f.input :last_name,
                placeholder: "Last Name",
                label: false %>
    <%= f.input :email,
                placeholder: "E-mail",
                label: false %>
    <%= f.text_area :about,
                placeholder: "About",
                label: false,
                class: 'about-user form-control' %>

    <%= f.submit class:'btn btn-primary' %>
  <% end %>
  </div>
  <%= render 'shared/previous_page' %>
</div>

